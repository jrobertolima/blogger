<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
	<% if (@tag.articles.length > 0)%>
		<% @tag.articles.each do |article| %>
			<li><%= link_to article.title, article_path(article) %></li>
		  <% end %>
	<% else %>
    		<span>"No articles related"</span> 
	<% end %>	
			
		
</ul>

<%= link_to "<< Back to Tags List", tags_path %><br/>
<%= link_to " Delete tag", tag_path(@tag), method: :delete, data: {:confirm => "Really delete the tag #{@tag.name}?"}%>
